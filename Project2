import random

CHOICES = ("rock", "paper", "scissors")
WIN_PAIRS = {("rock", "scissors"), ("scissors", "paper"), ("paper", "rock")}


def get_user_choice() -> str:
    """Prompt until the player types rock / paper / scissors (case-insensitive)."""
    while True:
        choice = input("Enter your move (rock / paper / scissors): ").strip().lower()
        if choice in CHOICES:
            return choice
        print("  âŒ Invalid choice. Try again.")


def get_computer_choice() -> str:
    """Randomly return rock, paper, or scissors."""
    return random.choice(CHOICES)


def decide_winner(player: str, computer: str) -> str:
    """Return 'user', 'computer', or 'tie'."""
    if player == computer:
        return "tie"
    return "user" if (player, computer) in WIN_PAIRS else "computer"


def ask_play_again() -> bool:
    """Return True if the player wants another round, False otherwise."""
    while True:
        ans = input("\nPlay another round? (yes / no): ").strip().lower()
        if ans in ("yes"):
            return True
        if ans in ("no"):
            return False
        print("  âŒ Please answer with yes or no.")


def play_round() -> str:
    """Run one round, announce result, and return 'user', 'computer', or 'tie'."""
    player = get_user_choice()
    computer = get_computer_choice()

    print(f"\nğŸ§‘ You chose      : {player.capitalize()}")
    print(f"ğŸ’» Computer chose : {computer.capitalize()}")

    outcome = decide_winner(player, computer)
    if outcome == "tie":
        print("ğŸ¤ Itâ€™s a tie!")
    elif outcome == "user":
        print("ğŸ‰ You win this round!")
    else:
        print("ğŸ˜ You lose this round.")
    return outcome


def main() -> None:
    print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    print("       ROCK  â€¢  PAPER  â€¢  SCISSORS")
    print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")

    user_score = comp_score = 0
    round_no = 1

    try:
        while True:
            print(f"\nâ”€â”€ Round {round_no} â”€â”€")
            result = play_round()

            if result == "user":
                user_score += 1
            elif result == "computer":
                comp_score += 1

            print(f"\nğŸ“Š Score â†’ You: {user_score}  |  Computer: {comp_score}")

            if not ask_play_again():
                break
            round_no += 1
    except KeyboardInterrupt:
        print("\n\nâ¹  Game interrupted by user.")

    # Final summary
    print("\nâ•â•â•â•â•â•â•â• FINAL SCORE â•â•â•â•â•â•â•â•")
    print(f"ğŸ§‘ You      : {user_score}")
    print(f"ğŸ’» Computer : {comp_score}")
    if user_score > comp_score:
        print("ğŸ† Overall result: You are the champion!")
    elif comp_score > user_score:
        print("ğŸ’» Overall result: Computer wins this time.")
    else:
        print("ğŸ¤ Overall result: Itâ€™s a draw.")
    print("Thanks for playing! ğŸ‘‹")


if __name__ == "__main__":
    main()
